{
  "extends": "@nuxt/typescript",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "experimentalDecorators": true,
    "allowJs": true,
    "types": [
      "@types/node",
      "@types/webpack",
      "@nuxt/vue-app"
    ]
  }
}